    <div>
      <%= flash[:notice] %>
    </div>
    
    <%= render partial: 'book', locals: {user: @book.user, book: Book.new} %>
    
    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table class="table table-hover">
          <tr>
            <td>
              <%= image_tag @book.user.get_profile_image(100,100) %><br>
              <%= link_to @book.user.name,user_path(@book.user_id) %>
            </td>
            <td><%= link_to @book.title, book_path(@book.id) %></td>
            <td><%= @book.body %></td>
            <td>
              <% if current_user.id == @book.user_id %>
                <%= link_to "Edit",edit_book_path(@book),class:"btn btn-sm btn-success mr-4" %>
                <%= link_to "Destroy",book_path(@book),method: :delete,data: {confirm:"本当に消しますか？"},class:"btn btn-sm btn-danger ml-4" %>
              <% else %>
                <%# 他のユーザーの場合は表示しない %>
              <% end %>
            </td>
          </tr>
      </table>
    </div>
  </div>
</div>
