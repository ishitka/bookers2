    <%= render partial: 'books/book', locals: {user: current_user, book: Book.new } %>
    
    <div class="offset-md-1 col-md-8">
      <h2 class="text-start">Users</h2>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th class="text-start">image</th>
            <th class="text-start">name</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <% @users.each do |user| %>
        <tbody>
          <tr>
            <td class="text-start"><%= image_tag user.get_profile_image(100,100) %></td>
            <td class="text-start"><%= user.name %></td>
            <% if current_user == user %>
              <td class="text-center"><%= link_to "Show",user_path(user) %></td>
            <% else %>
              <td class="text-center"><%= link_to "Show",user_path(user) %></td>
            <% end %>
          </tr>
        </tbody>
        <% end %>
      </table>
    </div>
  </div>
</div>
