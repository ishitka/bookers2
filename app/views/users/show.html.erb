    <% flash.each do |message_type, message| %>
    <div class="flash-message<%= message_type %>"><%= message %></div>
    <% end %>
    <%= render partial: 'books/book', locals: {user: @user, book: @book} %>
    <div class="offset-md-1 col-md-8">
      <div>
        <h2>Books</h2>
        <table class="table table-hover table-inverse">
          <thead>
            <tr>
              <th></th>
              <th class="text-start">Title</th>
              <th class="text-start">Opinion</th>
              <th colspan="3"></th>
            </tr>
          </thead>
          <tbody>
          <% @books.each do |book| %>
            <tr>
              <td class="text-start"><%= link_to image_tag(book.user.get_profile_image(100,100)), user_path(book.user) %></td>
              <td class="text-start"><%= link_to book.title, book_path(book.id) %></td>
              <td class="text-start"><%= book.body %></td>
            </tr>
          </tbody>
          <% end %>
        </table>
      </div>
    </div>
  </div>
</div>
